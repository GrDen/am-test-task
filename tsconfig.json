{
  "compilerOptions": {
    "target": "ESNEXT",     
    "module": "commonjs",                           
    "jsx": "react",                           
    "strict": true,                                 
    "baseUrl": "./",                             
    "paths": {
      "components/*": ["src/components/*"],
      "pages/*": ["src/pages/*"],
      "layouts/*": ["src/layouts/*"],
    },                                 
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  }
}
